# ============================================================================
# Deriv (CFD / Multipliers) Demo Configuration
# ============================================================================
DERIV_APP_ID=your_app_id_here
DERIV_DEMO_TOKEN=your_demo_token_here
DERIV_SYMBOL=R_75
DERIV_GRANULARITY=300
DERIV_CURRENCY=USD
DERIV_MULTIPLIER=100
DERIV_STAKE=50
DERIV_WS_URL=wss://ws.deriv.com/websockets/v3

# Simulation mode (true = no real orders placed, false = demo trading)
DRY_RUN=true

# Extra diagnostic logging (true = more logs)
VERBOSE=false

# Simulated balance for dry run mode
SIM_BALANCE=10000

# Minimum seconds between executions (throttling)
COOLDOWN_SECONDS=2
DERIV_TREND_CONFIRM_CANDLES=3
DERIV_STRATEGY_SWITCH_COOLDOWN=300
DERIV_TREND_SHORT_MA=8
DERIV_TREND_LONG_MA=40
DERIV_TREND_ADX_THRESHOLD=25.0
DERIV_BB_PERIOD=20
DERIV_BB_STD_DEV=1.5
DERIV_RSI_PERIOD=14
DERIV_RSI_THRESHOLD=35

# ============================================================================
# Risk Management Parameters (Optional)
# ============================================================================

# Position Sizing - % of account to risk per trade (volatility-aware)
MAX_RISK_PER_TRADE=0.01

# Minimum trade size in USDC
MIN_POSITION_SIZE=10.0

# ATR (Average True Range) calculation period for volatility measurement
ATR_PERIOD=14

# Stop-Loss distance: entry price ± (ATR × multiplier)
SL_ATR_MULTIPLIER=1.5

# Take-Profit distance: entry price ± (ATR × multiplier)
TP_ATR_MULTIPLIER=1.0

# Daily loss limit - halt trading if cumulative daily loss exceeds this
DAILY_LOSS_LIMIT=50.0
